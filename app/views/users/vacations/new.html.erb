<body class="bg" id="form">
  <div class="form-container">
    <h1 class="dark">Create a New Vacation</h1>
    <% if @vacation.errors.any? %>
      <ul class="errors">
        <% @vacation.errors.full_messages.each do |message| %>
          <li class="error"><%= message %></li>
        <% end %>
      </ul>
    <% end %>

    <%= form_for [:users, @vacation], action: :create do |f| %>
      <p><%= f.label :name %><br />
      <%= f.text_field :name %></p>

      <p><%= f.label :city %><br />
      <%= f.text_field :city %></p>

      <p><%= f.label :state %><br />
      <%= f.text_field :state %></p>

      <p><%= f.label :country %><br />
      <%= f.text_field :country %></p>

      <p><%= f.label :start_date %><br />
      <%= f.date_field :start_date %></p>

      <p><%= f.label :end_date %><br />
      <%= f.date_field :end_date %></p>

      <p><%= f.submit "Create Vacation", class: :btn %></p>
    <% end %>
  </div>
</body>
