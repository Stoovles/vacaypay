<body class="bg" id="vacation">
  <div class="vacation-container">
    <h1 class="dark"><%= facade.vacation_name %></h1>
    <li>Hosted By: <%= facade.vacation_host %></li>
    <li>Total Owed: <%= number_to_currency(facade.outstanding_balance(current_user)) %></li>

    <% facade.attending_activities(current_user).each do |activity| %>
      <% if activity.vacation_id == facade.vacation_id %>
        <div id="activity-<%= activity.id %>">
          <li><%= activity.name %></li>
          <li><%= facade.user_activity_price(activity, current_user) %></li>
          <% if facade.paid?(activity, current_user) %>
            PAID
          <% else %>
            <%= button_to "Settle Up", users_dwollas_transfer_path(activity_id: activity.id) %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</body>
